@* _InfoModal.cshtml *@
<div class="modal fade" id="infoModal" tabindex="-1" aria-labelledby="infoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="infoModalLabel">Информация об операции</h5>
                <img src="/images/altynken-logo.jpg" alt="logo" height="30" class="ms-auto" />
            </div>
            <div class="modal-body">
                <dl class="row">
                    <dt class="col-sm-4">Номер:</dt>
                    <dd class="col-sm-8" id="info-number">—</dd>

                    <dt class="col-sm-4">Оператор:</dt>
                    <dd class="col-sm-8" id="info-operator">—</dd>

                    <dt class="col-sm-4">Счёт:</dt>
                    <dd class="col-sm-8" id="info-account">—</dd>

                    <dt class="col-sm-4">Дата заявки:</dt>
                    <dd class="col-sm-8" id="info-requestDate">—</dd>

                    <dt class="col-sm-4">Дата операции:</dt>
                    <dd class="col-sm-8" id="info-operDate">—</dd>

                    <dt class="col-sm-4">Операция:</dt>
                    <dd class="col-sm-8" id="info-information">—</dd>

                    <dt class="col-sm-4">Комментарий:</dt>
                    <dd class="col-sm-8" id="info-comments">—</dd>

                    <dt class="col-sm-4">Тип операции:</dt>
                    <dd class="col-sm-8" id="info-type">—</dd>

                    <dt class="col-sm-4">Предыдущее значение:</dt>
                    <dd class="col-sm-8" id="info-oldValue">—</dd>

                    <dt class="col-sm-4">Новое значение:</dt>
                    <dd class="col-sm-8" id="info-newValue">—</dd>

                    <dt class="col-sm-4">Выполнено:</dt>
                    <dd class="col-sm-8" id="info-complete">—</dd>

                    <dt class="col-sm-4">Номер заявки:</dt>
                    <dd class="col-sm-8" id="info-orderN">—</dd>
                </dl>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
            </div>
        </div>
    </div>
</div>
