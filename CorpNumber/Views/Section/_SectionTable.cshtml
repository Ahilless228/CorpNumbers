@model IEnumerable<CorpNumber.Models.SectionViewModel>
<div class="mb-2 fw-semibold">
    Число записей: <span id="rowCount">@Model.Count()</span>
</div>
<div class="container" style="max-height: 500px; width:60%;margin:0 auto;overflow-y:auto;">
    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark sticky-top">
            <tr>
                <th>ID</th>
                <th>Отдел</th>
                <th>Отдел (Ch)</th>
                <th>Управление</th>
                <th>Актуальность</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CodeSection</td>
                    <td>@item.Section</td>
                    <td>@item.SectionCh</td>
                    <td>@item.DepartmentName</td>
                    <td>@(item.Actuality == true ? "✅" : "❌")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
