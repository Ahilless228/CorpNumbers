@model IEnumerable<CorpNumber.Models.PhoneViewModel>

@{
    ViewBag.Title = "Список телефонных номеров";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-3">
    <h2>Телефонные номера</h2>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <strong>Кол-во номеров:</strong>
            <span class="badge bg-primary">@Model?.Count() ?? 0</span>
        </div>
        <div class="input-group w-25">
            <input type="text" class="form-control" placeholder="Поиск номера">
            <button class="btn btn-outline-secondary">🔍</button>
        </div>
    </div>

    <!-- 🔘 Кнопка перехода на страницу с редактированием -->
    <div class="mb-3">
        <a class="btn btn-outline-dark" asp-controller="Phones" asp-action="EditPanel">Редактирование ⚙️</a>
    </div>

    <!-- ✅ Форма фильтрации -->
    <form method="get" asp-controller="Phones" asp-action="Index">
        <div class="row mb-2">
            <div class="col-md-3">
                <label>Оператор:</label>
                <select class="form-select" name="operatorId" onchange="this.form.submit()">
                    <option value="0">Все операторы</option>
                    @if (ViewBag.Operators != null)
                    {
                        @foreach (var op in ViewBag.Operators)
                        {
                            <option value="@op.CodeOperator"
                                    selected="@(ViewContext.HttpContext.Request.Query["operatorId"] == op.CodeOperator.ToString() ? "selected" : null)">
                                @op.Title
                            </option>
                        }


                    }
                </select>
            </div>
            <div class="col-md-3">
                <label>Категория:</label>
                <input type="text" class="form-control" />
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" checked>
                    <label class="form-check-label">Только корп. группа</label>
                </div>
            </div>
        </div>
    </form>

    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>№</th>
                <th>Номер</th>
                <th>ICCID</th>
                <th>Оператор</th>
                <th>Счёт</th>
                <th>Тарифный план</th>
                <th>Состояние</th>
                <th>Интернет</th>
                <th>Лимит</th>
                <th>Корпоративный</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var phone in Model)
                {
                    <tr>
                        <td>@phone.CodePhone</td>
                        <td><a href="#">@phone.Number</a></td>
                        <td>@phone.ICCID</td>
                        <td>@phone.Operator</td>
                        <td>@phone.Account</td>
                        <td>@phone.Tariff</td>
                        <td>@phone.Status</td>
                        <td>@phone.Internet</td>
                        <td>@(phone.Limit?.ToString() ?? "—")</td>
                        <td><input type="checkbox" @(phone.Corporative ? "checked" : "") disabled /></td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="10" class="text-center">Нет данных для отображения</td>
                </tr>
            }
        </tbody>
    </table>
</div>
