@model IEnumerable<CorpNumber.Models.PhoneViewModel>

@{
    ViewBag.Title = "Список телефонных номеров";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int selectedOperator = ViewBag.SelectedOperator ?? 0;
    int selectedCategory = ViewBag.SelectedCategory ?? 0;
    bool onlyCorp = ViewBag.OnlyCorp ?? false;
    string currentSort = ViewBag.SortField ?? "CodePhone";
    bool sortAsc = ViewBag.SortAsc ?? true;
    string GetSortLink(string field)
    {
        bool isCurrent = currentSort == field;
        bool nextAsc = isCurrent ? !sortAsc : true;

        var query = new
        {
            operatorId = ViewBag.SelectedOperator,
            categoryId = ViewBag.SelectedCategory,
            sortField = field,
            sortAsc = nextAsc
        };

        return Url.Action("Index", "Phones", query);
    }

}
<style>
    tbody tr.selected-row td {
        background-color: #d1ecf1 !important;
    }

    tbody tr.selected-row td {
        font-weight: bold;
    }
</style>



<div class="container-fluid mt-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Список телефонных номеров</h2>
        <a class="btn btn-outline-dark" asp-controller="Phones" asp-action="EditPanel">⚙️</a>
    </div>

    <!-- Верхняя панель -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <strong>Кол-во номеров:</strong>
            <span class="badge bg-primary">@((int?)ViewBag.PhoneCount ?? 0)</span>
        </div>
    </div>

    <!-- Панель фильтров и поиска -->
    <div class="row mb-3 align-items-end gx-2">
        <form id="filterForm" method="get" asp-controller="Phones" asp-action="Index" class="row gx-2">
            <!-- Оператор -->
            <div class="col-md-2">
                <label>Оператор:</label>
                <select class="form-select" name="operatorId" onchange="this.form.submit()">
                    <option value="0">Все операторы</option>
                    @foreach (var op in ViewBag.Operators)
                    {
                        @if (selectedOperator == op.CodeOperator)
                        {
                            <option value="@op.CodeOperator" selected>@op.Title</option>
                        }
                        else
                        {
                            <option value="@op.CodeOperator">@op.Title</option>
                        }
                    }
                    }
                </select>
            </div>

            <!-- Категория -->
            <div class="col-md-2">
                <label>Категория:</label>
                <select class="form-select" name="categoryId" onchange="this.form.submit()">
                    <option value="0">Все категории</option>
                    @foreach (var cat in ViewBag.Categories)
                    {
                        @if (selectedCategory == cat.CodeCategory)
                        {
                            <option value="@cat.CodeCategory" selected>@cat.Category</option>
                        }
                        else
                        {
                            <option value="@cat.CodeCategory">@cat.Category</option>
                        }
                    }
                    }
                </select>
            </div>

            <!-- Поиск по номеру -->
            <div class="col-md-3">
                <label>Поиск по номеру:</label>
                <input type="text" id="phoneSearch" class="form-control" name="number" placeholder="Введите номер" />
            </div>

            <!-- Поиск по ФИО -->
            <div class="col-md-3">
                <label>Поиск по ФИО:</label>
                <input type="text" id="fioSearch" class="form-control" name="fio" placeholder="Введите ФИО" />
            </div>

            <!-- Сброс -->
            <div class="col-auto d-flex align-items-end">
                <button type="button" class="btn btn-outline-secondary" id="resetFiltersBtn">Сбросить</button>
            </div>
        </form>

        <!-- Экспорт -->
        <div class="col-auto d-flex align-items-end">
            <form method="get" asp-controller="Phones" asp-action="ExportToExcel" class="m-0">
                <input type="hidden" name="operatorId" value="@ViewBag.SelectedOperator" />
                <input type="hidden" name="categoryId" value="@ViewBag.SelectedCategory" />
                <button type="submit" class="btn btn-success">📥 Экспорт в Excel</button>
            </form>
        </div>
    </div>









    <!-- Обёртка таблицы с прокруткой -->
    <!-- Прокручиваемая таблица с фиксированной шапкой -->
    <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
        <table class="table table-bordered table-hover table-striped mb-0" style="position: relative;">
            <thead class="table-dark sticky-top" style="top: 0; z-index: 10;">
                <tr>
                    <th><a href="@GetSortLink("CodePhone")">№</a></th>
                    <th><a href="@GetSortLink("Number")">Номер</a></th>
                    <th><a href="@GetSortLink("FullName")">ФИО</a></th>
                    <th><a href="@GetSortLink("NameCh")">姓名</a></th>
                    <th><a href="@GetSortLink("Operator")">Оператор</a></th>
                </tr>
            </thead>
            <tbody id="phoneTableBody">
                @if (Model != null && Model.Any())
                {
                    foreach (var phone in Model)
                    {
                        <tr class="phone-row" data-id="@phone.CodePhone">
                            <td>@phone.CodePhone</td>
                            <td>@phone.Number</td>
                            <td>@phone.FullName</td>
                            <td>@phone.NameCh</td>
                            <td>@phone.Operator</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center">Нет данных для отображения</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>



    <!-- Динамическое окошко под таблицей -->
    <div class="mt-4 p-3 border rounded bg-light" id="detailsPane" style="min-height: 200px;margin-bottom: 60px">
        <div class="row">
            <!-- Левая часть -->
            <div class="col-md-8">
                <div class="row mb-2">
                    <div class="col-4 fw-bold">Категория владельца:</div>
                    <div class="col-8" id="detailCategory">—</div>
                </div>
                <div class="row mb-2">
                    <div class="col-4 fw-bold">Организация:</div>
                    <div class="col-8" id="detailOrg">—</div>
                </div>
                <div class="row mb-2">
                    <div class="col-4 fw-bold">Сотрудник:</div>
                    <div class="col-8" id="detailEmployee">—</div>
                </div>
                <div class="row mb-2">
                    <div class="col-4 fw-bold">Управление:</div>
                    <div class="col-8" id="detailDepartment">—</div>
                </div>
                <div class="row mb-2">
                    <div class="col-4 fw-bold">Должность:</div>
                    <div class="col-8" id="detailPost">—</div>
                </div>
                <div class="row mb-2">
                    <div class="col-4 fw-bold">Таб. №:</div>
                    <div class="col-8" id="detailTabnum">—</div>
                </div>

            </div>

            <!-- Правая часть: фотография -->
            <div class="col-md-4 d-flex flex-column align-items-end">
                <img src="~/images/default-profile.jpg" alt="Фото сотрудника" id="detailPhoto"
                     style="max-height: 200px; max-width: 150px; object-fit: cover; border: 1px solid #999;" />
            </div>

        </div>
    </div>

</div>


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
                $(document).ready(function () {
            function filterTable() {
                var fioVal = $('#fioSearch').val().toLowerCase();
                var numberVal = $('#phoneSearch').val().toLowerCase();

                let anyVisible = false;

                $('table tbody tr').each(function () {
                    const number = $(this).find('td:nth-child(2)').text().toLowerCase();
                    const fio = $(this).find('td:nth-child(3)').text().toLowerCase();

                    const matchNumber = number.includes(numberVal);
                    const matchFio = fio.includes(fioVal);

                    if (matchNumber && matchFio) {
                        $(this).show();
                        anyVisible = true;
                    } else {
                        $(this).hide();
                    }
                });

                $('#noResultsRow').remove();
                if (!anyVisible) {
                    $('table tbody').append('<tr id="noResultsRow"><td colspan="9" class="text-center text-danger">Совпадений не найдено</td></tr>');
                }
            }

            // События для поиска
            $('#fioSearch, #phoneSearch').on('input', filterTable);

            // Кнопка сброса
             $('#resetFiltersBtn').click(function () {
                $('#phoneSearch').val('');
                $('#fioSearch').val('');
                $('#noResultsRow').remove();
                $('table tbody tr').show();

                // Сбросить выпадающие списки
                $('#filterForm select').each(function () {
                    this.selectedIndex = 0;
                });

                // Отправляем только форму фильтра
                $('#filterForm').submit();
            });


            // Клик по строке
            $('#phoneTableBody').on('click', '.phone-row', function () {
                var phoneId = $(this).data('id');
                $('.phone-row').removeClass('selected-row');
                $(this).addClass('selected-row');

                $.get('/Phones/GetDetails', { id: phoneId }, function (data) {
                    if (data) {
                        $('#detailCategory').text(data.category || '—');
                        $('#detailOrg').text(data.organization || '—');
                        $('#detailEmployee').text(data.employee || '—');
                        $('#detailTabnum').text(data.tabNum || '—');
                        $('#detailDepartment').text(data.department || '—');
                        $('#detailPost').text(data.post || '—');
                        $('#detailPhoto').attr('src', data.photoUrl || '/images/default-profile.jpg');
                    }
                });
            });
        });

    </script>
}

