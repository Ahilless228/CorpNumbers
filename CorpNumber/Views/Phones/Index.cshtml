@model IEnumerable<CorpNumber.Models.PhoneViewModel>

@{
    ViewBag.Title = "Список телефонных номеров";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-3">
    <h2>Телефонные номера</h2>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <strong>Кол-во номеров:</strong>
            <span class="badge bg-primary">@Model?.Count() ?? 0</span>
        </div>
        <div class="input-group w-25">
            <input type="text" class="form-control" placeholder="Поиск номера">
            <button class="btn btn-outline-secondary">🔍</button>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col">
            <button class="btn btn-success">Установка на паузу ⏸</button>
            <button class="btn btn-secondary">Снятие с паузы</button>
            <button class="btn btn-warning">Изменение лимита 🔒</button>
            <button class="btn btn-info">Восстановление ♻️</button>
        </div>
        <div class="col">
            <button class="btn btn-outline-primary">Подключ. интернета 🌐</button>
            <button class="btn btn-outline-danger">Отключ. интернета ❌</button>
            <button class="btn btn-outline-secondary">Изменение тарифа 📶</button>
        </div>
    </div>

    <div class="row mb-2">
        <div class="col-md-3">
            <label>Оператор:</label>
            <select class="form-select">
                <option>Все</option>
                <option>O!</option>
                <!-- можно заполнить динамически -->
            </select>
        </div>
        <div class="col-md-3">
            <label>Категория:</label>
            <input type="text" class="form-control" />
        </div>
        <div class="col-md-3 d-flex align-items-end">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" checked>
                <label class="form-check-label">Только корп. группа</label>
            </div>
        </div>
    </div>

    <table class="table table-bordered table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>№</th>
                <th>Номер</th>
                <th>ICCID</th>
                <th>Оператор</th>
                <th>Счёт</th>
                <th>Тарифный план</th>
                <th>Состояние</th>
                <th>Интернет</th>
                <th>Лимит</th>
                <th>Корпоративный</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var phone in Model)
                {
                    <tr>
                        <td>@phone.CodePhone</td>
                        <td><a href="#">@phone.Number</a></td>
                        <td>@phone.ICCID</td>
                        <td>@phone.Operator</td>
                        <td>@phone.Account</td>
                        <td>@phone.Tariff</td>
                        <td>@phone.Status</td>
                        <td>@phone.Internet</td>
                        <td>@(phone.Limit?.ToString() ?? "—")</td>
                        <td><input type="checkbox" @(phone.Corporative ? "checked" : "") disabled /></td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="10" class="text-center">Нет данных для отображения</td>
                </tr>
            }
        </tbody>
    </table>
</div>
