@*
    _RoutersTable.cshtml
*@
@model IEnumerable<CorpNumber.Models.Router>

<div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
    <table class="table table-bordered table-hover table-striped mb-0">
        <thead class="table-dark sticky-top">
            <tr>
                <th style="min-width: 60px;">Код</th>
                <th style="min-width: 120px;">Номер</th>
                <th style="min-width: 100px;">Счёт</th>
                <th style="min-width: 160px;">ICCID</th>
                <th style="min-width: 120px;">Модель</th>
                <th style="min-width: 120px;">IMEI</th>
                <th style="min-width: 120px;">Serial №</th>
                <th style="min-width: 140px;">Дата покупки</th>
                <th style="min-width: 200px;">Комментарий</th>
            </tr>
        </thead>
        <tbody id="routerTableBody">
            @if (Model != null && Model.Any())
            {
                foreach (var router in Model)
                {
                    var phone = router.NumberPhone;
                    var account = phone?.AccountNavigation;
                    var category = phone?.CodeOwnerNavigation?.CategoryNavigation?.Category ?? "—";

                    <tr class="router-row" style="cursor:pointer"
                        data-model="@router.Model"
                        data-imei="@router.IMEI"
                        data-serial="@router.Serial"
                        data-number="@phone?.Number"
                        data-account="@account?.Type"
                        data-iccid="@phone?.ICCID"
                        data-category="@category">

                        <td>@router.CodeRouter</td>
                        <td>@phone?.Number </td>
                        <td>@account?.Type </td>
                        <td>@phone?.ICCID </td>
                        <td>@router.Model</td>
                        <td>@router.IMEI</td>
                        <td>@router.Serial</td>
                        <td>@router.PurchaseDate?.ToString("dd.MM.yyyy") </td>
                        <td>@router.Comments</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="9" class="text-center text-danger">Нет данных для отображения</td>
                </tr>
            }
        </tbody>
    </table>
</div>