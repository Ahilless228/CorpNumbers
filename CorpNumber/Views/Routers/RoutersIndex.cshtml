@*
    Router: CorpNumber.Routers.RoutersIndex
*@
@{
}
@model IEnumerable<CorpNumber.Models.Router>

@{
    ViewBag.Title = "Роутеры";
}

<div class="container-fluid mt-3">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Роутеры</h2>
        <div class="d-flex gap-2">
            <button class="btn btn-success">➕ Добавить роутер</button>
            <button class="btn btn-danger">🗑 Удалить роутер</button>
        </div>
    </div>

    <!-- Таблица -->
    <div id="sectionTable">
        @await Html.PartialAsync("_RoutersTable", Model)
    </div>

    <!-- Динамическое окошко с инфо -->
    <div class="mt-4 p-3 border rounded bg-light" id="routerDetails" style="min-height: 200px">
        <div class="row">
            <!-- Фото -->
            <div class="col-md-2 d-flex align-items-center">
                <img id="routerPhoto" src="~/images/default-router.jpg" alt="Фото роутера" style="max-width: 100%; max-height: 150px; object-fit: contain; border: 1px solid #ccc;" />
            </div>
            <!-- Два столбца по 3 строки -->
            <div class="col-md-7">
                <div class="row">
                    <div class="col-4 fw-bold">Модель:</div>
                    <div class="col-8" id="detailModel">—</div>
                </div>
                <div class="row">
                    <div class="col-4 fw-bold">IMEI:</div>
                    <div class="col-8" id="detailIMEI">—</div>
                </div>
                <div class="row">
                    <div class="col-4 fw-bold">Serial №:</div>
                    <div class="col-8" id="detailSerial">—</div>
                </div>
                <div class="row">
                    <div class="col-4 fw-bold">Номер:</div>
                    <div class="col-8" id="detailNumber">—</div>
                </div>
                <div class="row">
                    <div class="col-4 fw-bold">Счёт:</div>
                    <div class="col-8" id="detailAccount">—</div>
                </div>
                <div class="row">
                    <div class="col-4 fw-bold">ICCID:</div>
                    <div class="col-8" id="detailICCID">—</div>
                </div>
            </div>
            <!-- Категория -->
            <div class="col-md-3">
                <div class="fw-bold mb-2">Категория:</div>
                <div id="detailCategory">—</div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/RoutersScript.js"></script>
}